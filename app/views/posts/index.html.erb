<h1>Posts<h1>

<%= link_to "Create new post", new_post_path %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Publish Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.publish_date %></td>
        <td>
          <%= link_to "Show", post_path(post) %>
          <%= link_to "Edit", edit_post_path(post) %>
          <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
